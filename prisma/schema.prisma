generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  // CAMBIO 1: De Role a String (y el default entre comillas)
  role      String   @default("CLIENT") 
  requests  Request[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Request {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title           String
  description     String
  // NUEVOS CAMPOS ESPEC√çFICOS
  requestType     String   @default("Copia de Entrada")
  deedNumber      String   @default("0000")
  year            String   @default("2024")
  notary          String   @default("Sin especificar")
  parties         String
  // CAMBIO 2: De RequestStatus a String (y el default entre comillas)
  status          String   @default("PENDING")
  rejectionReason String?
  transactionId   String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}